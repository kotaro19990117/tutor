<%= stylesheet_link_tag "users", :media => "all" %>

<div class="text-center">
<h1 class="card-title">生徒の新規登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "students/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :名前%><br />
    <%= f.text_field :name, autofocus: true , class:"form-controll"%>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-controll"%>
  </div>

  <div class="field">
    <%= f.label :担当先生id %><br />
    <%= f.text_field :teacher_id, autofocus: true , class:"form-controll"%>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class:"form-controll"%>
  </div>

  <div class="field">
    <%= f.label :パスワードの確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-controll"%>
  </div>

  <div class="actions">
    <%= f.submit "新規登録する", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "students/shared/links" %>
</div>
